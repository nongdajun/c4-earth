{
    "name": "c4isr-earth-js",
    "displayName": "C4ISR Earth JS",
    "description": "C4ISR Earth Javascript IDE extension",
    "version": "0.0.2",
    "publisher": "NDJ",
    "engines": {
        "vscode": "^1.3.0"
    },
    "categories": [
        "Other",
        "Debuggers",
        "Productivity"
    ],
    "activationEvents": [
        "onCommand:extension.init",
        "onCommand:extension.initForce",
        "onCommand:extension.new",
        "onCommand:extension.call",
        "onCommand:extension.run",
        "onCommand:extension.findserver",
        "workspaceContains:.earth_dev.json"
    ],
    "main": "./extension",
    "contributes": {
        "commands": [
            {
            "command": "extension.init",
            "title": "earth: init 初始化工作空间"
            },
            {
            "command": "extension.initForce",
            "title": "earth: init force 初始化工作空间并强制覆盖当前配置的内容"
            },
            {
            "command": "extension.new",
            "title": "earth: new 按照模板创建新的脚本文件"
            },
            {
            "command": "extension.call",
            "title": "earth: call 以指令形式发送当前编辑窗口内容"
            },
            {
            "command": "extension.run",
            "title": "earth: run 保存并运行当前编辑的脚本"
            },
            {
            "command": "extension.findserver",
            "title": "earth: findserver 搜索同一网络上的C4ISR EARTH服务器"
            }],
        "configuration": {
            "type": "object",
            "title": "C4ISR Earth JS IDE configuration",
            "properties": {
                "c4earth.serverHost": {
                    "type": ["string", "null"],
                    "default": null,
                    "description": "Specifies the host name for connect to C4ISR earth server."
                },
                "c4earth.serverPort": {
                    "type": "integer",
                    "default": 50372,
                    "description": "Specifies the port number for connect to C4ISR earth server."
                },
                "c4earth.serverPassword": {
                    "type": ["string", "null"],
                    "default": null,
                    "description": "Specifies the password for login C4ISR earth server."
                }
            }
        },
        "menus": {
            "editor/title": [{
                "when": "1==1",
                "command": "extension.init",
                "alt": "extension.initForce",
                "group": "navigation"
            }]
        }
    },
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "preview":true,
    "icon":"icon.png",
    "galleryBanner": {
        "color": "#EFEFFF",
        "theme": "light"
    },
    "devDependencies": {
        "vscode": "^1.3.0"
    }
}